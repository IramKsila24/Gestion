<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="views.DashboardController"
            style="-fx-background-color: #f5f5f5;">

    <!-- Top - Titre -->
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #3f51b5; -fx-padding: 20;">
            <Label text="Application de Gestion" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 24;"/>
        </HBox>
    </top>

    <!-- Center - Buttons -->
    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 50;">
            <!-- Boutons vers les autres pages -->
            <Button text="Gestion des Produits" onAction="#goToProductManagement" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16; -fx-pref-width: 200;"/>
            <Button text="Gestion du Stock" onAction="#goToStockManagement" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16; -fx-pref-width: 200;"/>
        </VBox>
    </center>

    <!-- Bottom - Bouton Logout -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10; -fx-background-color: #e0e0e0;">
            <Button text="Logout" onAction="#logout" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </bottom>

</BorderPane>
