pipeline {
    agent any
    environment {
        DOCKER_IMAGE = "school-app:latest"
    }
    stages {
        stage('Clone') {
            steps {
                git branch: 'main', 
                url: 'https://github.com/IramKsila24/test.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
stage('Construire Image Docker') {
 steps {
 sh 'docker build -t school-app:latest .'
 }
 }
 }
}

